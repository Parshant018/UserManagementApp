@{
    ViewBag.Title = "Home";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <form method="post">
        <nav class="navbar navbar-expand navbar-dark">
            <div class="navbar-header">
                <div class="nav-item"><h3 class="navbar-brand">UserManagementApp</h3></div>
                <div>
                   <ul class="navbar-nav">
                       <li class="nav-item">
                           <input type="text" id="SearchText" placeholder="Search" onkeydown="Debounce()" />
                       </li>
                            <li class="nav-item">
                                <a href="@Url.Action("CreateUser","Home")" class="nav-link m-2">Create</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("LogOut","Login")" class="nav-link m-2"> Logout </a>
                            </li>
                        </ul>
                </div>
            </div>
        </nav>
        <div id="DeletePopup"><p>Are you sure you want to delete?</p><a id="AcceptButton" class="grid-btn" onclick="Delete()">Yes</a>
        <a id="DenyButton" class="grid-btn" onclick="CloseDeletePopup()">No</a>
        </div>
        <div id="SortOptions">
            <div class="dropdown FilterOptions">
                <a class="dropdown-toggle m-2" data-toggle="dropdown">Filter</a>
                <table class="dropdown-menu drop">
                    <tr>
                        <td>Name:</td>
                        <td><input type="text" id="Name" /></td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td><input type="email" id="Email" /></td>
                    </tr>
                    <tr>
                        <td>Date Of Birth:</td>
                        <td><input type="date" id="DateOfBirth" /></td>
                    </tr>
                    <tr>
                        <td>Designation:</td>
                        <td><input type="text" id="Designation" /></td>
                    </tr>
                    <tr>
                        <td>Salary:</td>
                        <td><input type="number" id="Salary" /></td>
                    </tr>
                    <tr>
                        <td>Phone Number:</td>
                        <td><input type="number" id="PhoneNumber" /></td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="button" value="Search" id="SearchButton" onclick="SearchData()" />
                            <input type="button" value="Clear" id="ClearButton" onclick="ClearFilters()" />
                        </td>
                    </tr>
                </table>
            </div>
            <label class="SortOption">Order By:</label>
            <select id="SortOrder" onclick="SearchData()">
                <option value="Name">Name</option>
                <option value="Email">Email</option>
                <option value="Designation">Designation</option>
                <option value="PhoneNumber">Phone Number</option>
                <option value="DateOfBirth">Date Of Birth</option>
            </select>
            <label class="SortOption">SortDirection:</label>
            <select id="SortDirection" onclick="SearchData()">
                <option value="0">Ascending</option>
                <option value="1">Descending</option>
            </select>
            <label class="SortOption">PageSize:</label>
            <input type="number" id="PageSize" value="20" min="1" max="70" onkeydown="Debounce()" onclick="SearchData()" />
            <label class="SortOption">Page No.:</label>
            <input type="number" id="PageIndex" value="1" min="1" onkeydown="Debounce()" onclick="SearchData()" />
        </div>
        <div id="EmptyPage">No User Found</div>
    </form>
    <div class="innertable" id="innertable"></div>
    <script src="~/Content/scripts/Search.js"> </script>
