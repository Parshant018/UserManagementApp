@model UserManager.Models.EmployeeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    @using (Html.BeginForm("UpdateUser", "AdminHome", FormMethod.Post))
    {
        <label>Id:</label>
        @Html.TextBoxFor(model => model.Id, new { @type = "number", @class = "form-control", @readonly = "readonly" })<br />
        <label>Name:</label>
        @Html.TextBoxFor(model => model.Name, new { @type = "text", @class = "form-control" })<br />
        <label>Email:</label>
        @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control" })<br />
        <label>Password:</label>
        @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control" })<br />
        <label>DateOfBirth:</label>
        @Html.TextBoxFor(model => model.DateOfBirth, new { @type = "date", @class = "form-control" })<br />
        <label>Designation:</label>
        @Html.DropDownListFor(model => model.Designation, new List<SelectListItem> {
           new SelectListItem { Text="Admin",Value="Admin"},
           new SelectListItem { Text="Developer",Value="Developer"},
           new SelectListItem { Text="Manager",Value="Manager"},
           new SelectListItem { Text="Intern",Value="Intern"},
           new SelectListItem { Text="Tester",Value="Tester"},
        })<br />
        <label>PhoneNumber:</label>
        @Html.TextBoxFor(model => model.PhoneNumber, new { @type = "number", @class = "form-control" })<br />
        <label>Age:</label>
        @Html.TextBoxFor(model => model.Age, new { @type = "number", @class = "form-control" })<br />
        <label>Salary:</label>
        @Html.TextBoxFor(model => model.Salary, new { @type = "number", @class = "form-control" })<br />
        <label for="Password">Bio:</label>
        @Html.TextAreaFor(model => model.Bio, new { @rows = "15", @cols = "30" })<br />
        <input type="submit" value="Update Data" />
    }
    <div>
        @Html.ActionLink("<-", "Index")
    </div>
</body>
</html>
